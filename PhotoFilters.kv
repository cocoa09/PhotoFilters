Display

<Display>:
    BoxLayout:
        orientation:"vertical"
        TextInput:
            id:v
        Button:
            text: "load image"
            on_press: root.load_img()
        Image:
            id: img
            source: ""
            size_hint:1,6
        GridLayout:
            orientation: "lr-tb"
            rows:2
            cols:3
            Button:
                text:"invert"
            Button:
                text:"black and white"
            Button:
                text:"pointillism"
                on_press: root.pointillism("test")
            Button:
                text:"line drawing"
            Button:
                text:"distance halo"
            Button:
                text:"pix"

